<database>
    <connections>
        <connection name="chinalife"
                    url="jdbc:mysql://localhost/chinalife?useUnicode=true&amp;characterEncoding=utf-8"
                    user="${db_user}"
                    pwd="${db_password}"
                    role="master"/>
    </connections>
    <tables>
        <table name="user" con_refs="chinalife"></table>
        <table name="user_info" con_refs="chinalife"></table>
        <table name="house_sale" con_refs="chinalife"></table>
        <table name="house_sale_picture" con_refs="chinalife"></table>
    </tables>
</database>